<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:orientation="vertical">

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/anchor"
        android:layout_centerVertical="true"
        android:src="@drawable/ctklabo_rb256"
        android:transitionName="transition:image_logo" />

    <Button
        android:id="@+id/button_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/anchor"
        android:text="Button A"
        android:transitionName="transition:button_a" />

    <Button
        android:id="@+id/button_excluded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="Excluded" />

    <Button
        android:id="@+id/button_source_fade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="SourceFade"
        android:transitionName="transition:button_source_fade" />

</RelativeLayout>
